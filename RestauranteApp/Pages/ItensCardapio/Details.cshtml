@page "{id:int}"
@model RestauranteApp.Pages.ItensCardapio.DetailsModel

@{
    ViewData["Title"] = "Detalhes do item";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Detalhes do Item</h2>
        <div class="d-flex gap-2">
            <a asp-page="./Index" class="btn btn-secondary">Voltar</a>
            
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header table-secondary">
            <strong>@Model.Item.Nome</strong>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Item.Nome)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Item.Nome)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Item.Descricao)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Item.Descricao)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Item.PrecoBase)</dt>
                <dd class="col-sm-9">
                    @Model.Item.PrecoBase.ToString("C", new System.Globalization.CultureInfo("pt-BR"))
                </dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Item.Periodo)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Item.Periodo)</dd>

                <dt class="col-sm-3">Ingredientes (@Model.Item.Ingredientes.Count)</dt>
                <dd class="col-sm-9">
                    @if (Model.Item.Ingredientes?.Any() == true)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var ingrediente in Model.Item.Ingredientes)
                            {
                                <li class="list-group-item px-0">
                                    @ingrediente.Nome
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span class="text-muted">Nenhum ingrediente associado.</span>
                    }
                </dd>
            </dl>
        </div>

        
    </div>
</div>
