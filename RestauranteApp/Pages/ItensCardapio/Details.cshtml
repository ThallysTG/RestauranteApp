@page "{id:int}"
@model RestauranteApp.Pages.ItensCardapio.DetailsModel

@{
    ViewData["Title"] = "Detalhes do item";
}

<h1>Detalhes do item</h1>

<div>
    <h4>ItemCardapio</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemCardapio.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemCardapio.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemCardapio.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemCardapio.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemCardapio.PrecoBase)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemCardapio.PrecoBase)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemCardapio.Periodo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemCardapio.Periodo)
        </dd>

        <dd class="col-sm-2">
            Ingredientes (@(Model.ItemCardapio.Ingredientes.Count)):
            @if (Model.ItemCardapio.Ingredientes.Any())
            {
                <ul>
                    @foreach (var ingrediente in Model.ItemCardapio.Ingredientes)
                    {
                        <li>@ingrediente.Nome</li>
                    }
                </ul>
            }
            else
            {
                <p>Nenhum ingrediente associado.</p>
            }
)))
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.ItemCardapio.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
