@page
@model RestauranteApp.Pages.ItensCardapio.CreateModel

@{
    ViewData["Title"] = "Novo item do cardápio";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Novo Item do Cardápio</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Item.Nome" class="form-label"></label>
                            <input asp-for="Item.Nome" class="form-control" />
                            <span asp-validation-for="Item.Nome" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Item.Descricao" class="form-label"></label>
                            <textarea asp-for="Item.Descricao" class="form-control"></textarea>
                            <span asp-validation-for="Item.Descricao" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Item.PrecoBase" class="form-label"></label>
                            <input asp-for="Item.PrecoBase" class="form-control" />
                            <span asp-validation-for="Item.PrecoBase" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Item.Periodo" class="form-label"></label>
                            <select asp-for="Item.Periodo" class="form-select"
                                    asp-items="Html.GetEnumSelectList<RestauranteApp.Models.Periodo>()"></select>
                            <span asp-validation-for="Item.Periodo" class="text-danger"></span>
                        </div>

                        <fieldset class="mb-3">
                            <legend class="h6">Ingredientes</legend>
                            <div class="row">
                                @foreach (var ing in Model.TodosIngredientes)
                                {
                                    <div class="col-6 col-md-4">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox"
                                                   name="IngredientesSelecionados"
                                                   value="@ing.Id"
                                                   id="ing_@ing.Id" />
                                            <label class="form-check-label" for="ing_@ing.Id">@ing.Nome</label>
                                        </div>
                                    </div>
                                }
                            </div>
                        </fieldset>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Salvar</button>
                            <a asp-page="Index" class="btn btn-secondary">Voltar</a>
                        </div>
                    </form>
                </div>
            </div>

           
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
