@page
@model RestauranteApp.Pages.ItensCardapio.DeleteModel

@{
    ViewData["Title"] = "Excluir Item";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0 text-danger">Excluir Item</h2>
       
    </div>

    <div class="alert alert-warning">
        <h5 class="alert-heading">Atenção!</h5>
        <p>Você tem certeza que deseja <strong>excluir</strong> este item do cardápio?</p>
    </div>

    <div class="card shadow-sm mb-3">
        <div class="card-header table-secondary">
            <strong>@Model.ItemCardapio.Nome</strong>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ItemCardapio.Nome)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ItemCardapio.Nome)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ItemCardapio.Descricao)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ItemCardapio.Descricao)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ItemCardapio.PrecoBase)</dt>
                <dd class="col-sm-9">
                    @Model.ItemCardapio.PrecoBase.ToString("C", new System.Globalization.CultureInfo("pt-BR"))
                </dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ItemCardapio.Periodo)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ItemCardapio.Periodo)</dd>
            </dl>
        </div>
    </div>

    <form method="post" class="d-flex justify-content-end gap-2">
        <input type="hidden" asp-for="ItemCardapio.Id" />
        <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
        <button type="submit" class="btn btn-danger">Excluir</button>
    </form>
</div>
