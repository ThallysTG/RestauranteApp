@page
@model RestauranteApp.Pages.Ingredientes.IndexModel

@{
    ViewData["Title"] = "Ingredientes";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Ingredientes</h2>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Novo Ingrediente
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-secondary">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Ingrediente[0].Nome)</th>
                            <th class="text-center" style="width:200px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Ingrediente)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">
                                            <i class="bi bi-eye"></i> Detalhes
                                        </a>
                                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-dark">
                                            <i class="bi bi-pencil"></i> Editar
                                        </a>
                                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Excluir
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
