@page
@model RestauranteApp.Pages.Pedidos.DetailsModel

@{
    ViewData["Title"] = "Detalhes do Pedido";
}

<h2>Pedido #@Model.Pedido.Id</h2>
<p><strong>Data:</strong> @Model.Pedido.Data.ToString("dd/MM/yyyy HH:mm")
<p><strong>Período:</strong> @Model.Pedido.PeriodoPedido</p>
<p><strong>Atendimento:</strong> @Model.Pedido.Atendimento?.Tipo</p>

<table class="table">
    <thead>
        <tr>
            <th>Item</th>
            <th class="text-end">Preço</th>
            <th class="text-end">Qtd</th>
            <th class="text-end">Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model.Pedido.Itens)
        {
            <tr>
                <td>@i.Item?.Nome</td>
                <td class="text-end">@i.PrecoUnitarioBase.ToString("C")</td>
                <td class="text-end">@i.Quantidade</td>
                <td class="text-end">@((i.PrecoUnitarioBase * i.Quantidade - i.DescontoUnitarioAplicado * i.Quantidade).ToString("C"))</td>
            </tr>
        }
    </tbody>
    @if (Model.Pedido.EnderecoEntrega != null)
    {
        <p>
            <strong>Entrega em:</strong>
            @Model.Pedido.EnderecoEntrega.Titulo -
            @Model.Pedido.EnderecoEntrega.Logradouro, @Model.Pedido.EnderecoEntrega.Numero -
            @Model.Pedido.EnderecoEntrega.Cidade
        </p>
    }
    <tfoot>
        <tr><th colspan="3" class="text-end">Subtotal</th><th class="text-end">@Model.Pedido.SubtotalItens.ToString("C")</th></tr>
        <tr><th colspan="3" class="text-end">Descontos</th><th class="text-end">-@Model.Pedido.TotalDescontos.ToString("C")</th></tr>
        <tr><th colspan="3" class="text-end">Taxas</th><th class="text-end">@Model.Pedido.TotalTaxas.ToString("C")</th></tr>
        <tr><th colspan="3" class="text-end">Total</th><th class="text-end">@Model.Pedido.TotalFinal.ToString("C")</th></tr>
    </tfoot>
</table>

<a asp-page="Index" class="btn btn-secondary">Voltar</a>