@page
@model RestauranteApp.Pages.Pedidos.CreateModel
@{
    ViewData["Title"] = "Novo Pedido";
}

<h1>Novo Pedido</h1>

<form method="post">
    <div class="row g-3 mb-3">
        <div class="col-md-3">
            <label class="form-label">Período</label>
            <select asp-for="PeriodoPedido"
                    class="form-select"
                    asp-items="Html.GetEnumSelectList<RestauranteApp.Models.Periodo>()"
                    onchange="location.href='@Url.Page("Create")?PeriodoPedido=' + this.value">
            </select>
        </div>

        <div class="col-md-3">
            <label class="form-label">Atendimento</label>
            <select asp-for="TipoAtendimento" class="form-select">
                <option value="Presencial">Presencial</option>
                <option value="DeliveryProprio">Delivery Próprio</option>
                <option value="DeliveryAplicativo">Delivery Aplicativo</option>
            </select>
        </div>

        <div class="col-md-3">
            <label class="form-label">Taxa Fixa (se houver)</label>
            <input asp-for="TaxaFixa" class="form-control" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Comissão % (app)</label>
            <input asp-for="ComissaoPercentual" class="form-control" />
        </div>

        <div class="col-md-6">
            <label class="form-label">Parceiro (app)</label>
            <input asp-for="Parceiro" class="form-control" />
        </div>
    </div>

    <h4>Itens do Cardápio (preencha as quantidades)</h4>
    <table class="table table-sm align-middle">
        <thead>
            <tr>
                <th>Período</th>
                <th>Item</th>
                <th class="text-end">Preço</th>
                <th class="text-end" style="width:120px">Qtd</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Itens.Count; i++)
            {
                <tr>
                    <td>@Model.Itens[i].Periodo</td>
                    <td>@Model.Itens[i].Nome</td>
                    <td class="text-end">@Model.Itens[i].Preco.ToString("C")</td>
                    <td class="text-end" style="width:120px">
                        <input asp-for="Itens[i].Quantidade" class="form-control form-control-sm text-end" />
                        <input type="hidden" asp-for="Itens[i].ItemCardapioId" />
                        <input type="hidden" asp-for="Itens[i].Nome" />
                        <input type="hidden" asp-for="Itens[i].Preco" />
                        <input type="hidden" asp-for="Itens[i].Periodo" />  
                        <span asp-validation-for="Itens[i].Quantidade" class="text-danger"></span>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div asp-validation-summary="All" class="text-danger"></div>

    <button type="submit" class="btn btn-primary">Salvar Pedido</button>
    <a asp-page="/Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
