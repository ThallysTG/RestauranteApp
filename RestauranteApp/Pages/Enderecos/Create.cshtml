@page
@model RestauranteApp.Pages.Enderecos.CreateModel

@{
    ViewData["Title"] = "Novo Endereço";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Novo Endereço</h2>
        <a asp-page="Index" class="btn btn-secondary">Voltar</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header table-secondary">
            <strong>Informe os dados do endereço</strong>
        </div>

        <div class="card-body">
            <form method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="EnderecoEntrega.Titulo" class="form-label">
                        <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.EnderecoEntrega.Titulo)
                    </label>
                    <input asp-for="EnderecoEntrega.Titulo" class="form-control" />
                    <span asp-validation-for="EnderecoEntrega.Titulo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EnderecoEntrega.Logradouro" class="form-label">
                        <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.EnderecoEntrega.Logradouro)
                    </label>
                    <input asp-for="EnderecoEntrega.Logradouro" class="form-control" />
                    <span asp-validation-for="EnderecoEntrega.Logradouro" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EnderecoEntrega.Numero" class="form-label">
                        <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.EnderecoEntrega.Numero)
                    </label>
                    <input asp-for="EnderecoEntrega.Numero" class="form-control" />
                    <span asp-validation-for="EnderecoEntrega.Numero" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EnderecoEntrega.Complemento" class="form-label"></label>
                    <input asp-for="EnderecoEntrega.Complemento" class="form-control" />
                    <span asp-validation-for="EnderecoEntrega.Complemento" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EnderecoEntrega.Bairro" class="form-label">
                        <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.EnderecoEntrega.Bairro)
                    </label>
                    <input asp-for="EnderecoEntrega.Bairro" class="form-control" />
                    <span asp-validation-for="EnderecoEntrega.Bairro" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EnderecoEntrega.Cidade" class="form-label">
                        <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.EnderecoEntrega.Cidade)
                    </label>
                    <input asp-for="EnderecoEntrega.Cidade" class="form-control" />
                    <span asp-validation-for="EnderecoEntrega.Cidade" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EnderecoEntrega.UF" class="form-label">
                        <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.EnderecoEntrega.UF)
                    </label>
                    <input asp-for="EnderecoEntrega.UF" class="form-control" />
                    <span asp-validation-for="EnderecoEntrega.UF" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EnderecoEntrega.CEP" class="form-label">
                        <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.EnderecoEntrega.CEP)
                    </label>
                    <input asp-for="EnderecoEntrega.CEP" class="form-control" />
                    <span asp-validation-for="EnderecoEntrega.CEP" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
