@page
@model RestauranteApp.Pages.Mesas.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Mesa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mesa.Numero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mesa.Numero)
        </dd>
    </dl>

    @if (Model.Mesa?.Reservas != null && Model.Mesa.Reservas.Any())
    {
        <div class="alert alert-warning">
            Esta mesa possui @Model.Mesa.Reservas.Count reserva(s). Você não pode excluí-la.
        </div>
    }
    
    <form method="post">
        <input type="hidden" asp-for="Mesa.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
