@page
@model RestauranteApp.Pages.Reservas.CreateModel

@{
    ViewData["Title"] = "Nova reserva";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Nova reserva</h2>
        <a asp-page="Index" class="btn btn-secondary">Voltar</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header table-secondary">
            <strong>Informe os dados da reserva</strong>
        </div>

        <div class="card-body">
            <form method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Reserva.DataHora" class="form-label"></label>
                    <input asp-for="Reserva.DataHora" type="datetime-local" class="form-control" />
                    <div class="form-text">Somente entre 19:00 e 22:00.</div>
                    <span asp-validation-for="Reserva.DataHora" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Reserva.NumeroPessoas" class="form-label"></label>
                    <input asp-for="Reserva.NumeroPessoas" class="form-control" inputmode="numeric" min="1" />
                    <span asp-validation-for="Reserva.NumeroPessoas" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Reserva.MesaId">Mesa</label>
                    <select asp-for="Reserva.MesaId" class="form-select" asp-items="Model.MesasOptions"></select>
                    <span asp-validation-for="Reserva.MesaId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Reservar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
