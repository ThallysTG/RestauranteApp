@page
@model RestauranteApp.Pages.Reservas.IndexModel

@{
    ViewData["Title"] = "Minhas Reservas";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Minhas Reservas</h2>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nova reserva
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-secondary">
                        <tr>
                            <th>Data/Hora</th>
                            <th>Mesa</th> @* TODO: substituir por nome/e-mail quando houver *@
                            <th class="text-end" style="width: 220px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.Lista)
                        {
                            <tr>
                                <td>@r.DataHora.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>Mesa @r.Mesa?.Numero</td>
                                <td class="text-end">
                                    <div class="d-inline-flex gap-2">
                                        <a asp-page="Details" asp-route-id="@r.Id" class="btn btn-sm btn-info text-white">
                                            <i class="bi bi-eye"></i> Detalhes
                                        </a>
                                        <a asp-page="Edit" asp-route-id="@r.Id" class="btn btn-sm btn-warning text-dark">
                                            <i class="bi bi-pencil"></i> Editar
                                        </a>
                                        <a asp-page="Delete" asp-route-id="@r.Id" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Cancelar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
