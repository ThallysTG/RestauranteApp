@model RestauranteApp.Models.ViewModels.HomeSugestoesVM
@{
    ViewData["Title"] = "Bem-vindo";
}

<div class="row align-items-center mb-4">
    <div class="col-lg-8">
        <h1 class="display-6 fw-semibold">Bem-vindo ao RestauranteApp</h1>
        <p class="text-muted mb-0">
            Consulte o cardápio, peça delivery ou reserve uma mesa para o jantar.
        </p>
    </div>
    <div class="col-lg-4 d-flex gap-2 justify-content-lg-end mt-3 mt-lg-0">
        @if (User.Identity?.IsAuthenticated == true)
        {
            <a class="btn btn-primary" asp-page="/Pedidos/Create">Fazer Pedido</a>
            <a class="btn btn-outline-secondary" asp-page="/Reservas/Create">Reservar Mesa</a>
        }
        else
        {
            <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Login">Entrar para Pedir</a>
            <a class="btn btn-outline-secondary" asp-area="Identity" asp-page="/Account/Login">Entrar para Reservar</a>
        }
    </div>
</div>

<div class="row g-4">
    <div class="col-md-6">
        <div class="p-4 hero-card">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="badge bg-success-subtle text-success border border-success-subtle badge-periodo">Almoço</span>
                <span class="badge bg-warning text-dark">-20% hoje</span>
            </div>
            <h3 class="h5 mb-1">Sugestão do Chefe (Almoço)</h3>
            <p class="text-muted mb-3">
                @if (Model.SugestaoAlmoco is null)
                {
                    @:Ainda não definido para hoje.
                }
                else
                {
                    <strong>@Model.SugestaoAlmoco.Nome</strong>
                    @: — @Model.SugestaoAlmoco.PrecoBase.ToString("C")
                }
            </p>
            <a class="btn btn-sm btn-outline-primary" asp-page="/ItensCardapio/Index">Ver Cardápio</a>
        </div>
    </div>

    <div class="col-md-6">
        <div class="p-4 hero-card">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="badge bg-primary-subtle text-primary border border-primary-subtle badge-periodo">Jantar</span>
                <span class="badge bg-warning text-dark">-20% hoje</span>
            </div>
            <h3 class="h5 mb-1">Sugestão do Chefe (Jantar)</h3>
            <p class="text-muted mb-3">
                @if (Model.SugestaoJantar is null)
                {
                    @:Ainda não definido para hoje.
                }
                else
                {
                    <strong>@Model.SugestaoJantar.Nome</strong>
                    @: — @Model.SugestaoJantar.PrecoBase.ToString("C")
                }
            </p>
            <a class="btn btn-sm btn-outline-primary" asp-page="/ItensCardapio/Index" asp-route-periodo="Jantar">Ver Cardápio do Jantar</a>
        </div>
    </div>
</div>
