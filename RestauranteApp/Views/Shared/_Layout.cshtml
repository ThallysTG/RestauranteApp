@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    string Active(string ctrl, string? page = null)
    {
        var routeCtrl = (string?)ViewContext.RouteData.Values["controller"] ?? "";
        var routePage = (string?)ViewContext.RouteData.Values["page"] ?? "";
        if (!string.IsNullOrEmpty(page)) return routePage?.StartsWith(page, StringComparison.OrdinalIgnoreCase) == true ? "active" : "";
        return routeCtrl.Equals(ctrl, StringComparison.OrdinalIgnoreCase) ? "active" : "";
    }
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RestauranteApp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">RestauranteApp</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <!-- públicos -->
                    <li class="nav-item">
                        <a class="nav-link @Active("Home")" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @Active("", "/ItensCardapio")" asp-page="/ItensCardapio/Index">Cardápio</a>
                    </li>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <!-- usuários logados -->
                        <li class="nav-item"><a class="nav-link @Active("", "/Pedidos")" asp-page="/Pedidos/Index">Pedidos</a></li>
                        <li class="nav-item"><a class="nav-link @Active("", "/Reservas")" asp-page="/Reservas/Index">Reservas</a></li>
                        <li class="nav-item"><a class="nav-link @Active("", "/Mesas")" asp-page="/Mesas/Index">Mesas</a></li>
                        <li class="nav-item"><a class="nav-link @Active("", "/Ingredientes")" asp-page="/Ingredientes/Index">Ingredientes</a></li>
                        <li class="nav-item"><a class="nav-link @Active("", "/SugestoesDoChefe")" asp-page="/SugestoesDoChefe/Index">Sugestões do Chefe</a></li>
                        <li class="nav-item"><a class="nav-link @Active("", "/Enderecos")" asp-page="/Enderecos/Index">Meus Endereços</a></li>
                    }
                </ul>

                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item me-2 d-flex align-items-center text-muted">
                                Olá, @User.Identity!.Name
                            </li>
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                                    <button class="btn btn-outline-secondary btn-sm">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2"><a class="btn btn-outline-primary btn-sm" asp-area="Identity" asp-page="/Account/Login">Entrar</a></li>
                            <li class="nav-item"><a class="btn btn-primary btn-sm" asp-area="Identity" asp-page="/Account/Register">Registrar</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-fill">
        <div class="container py-4">
            <partial name="_Alerts" />
            @RenderBody()
        </div>
    </main>

    <footer class="border-top mt-auto py-3">
        <div class="container small text-muted d-flex justify-content-between">
            <span>&copy; @DateTime.Now.Year RestauranteApp</span>
            <span>Trabalho acadêmico — ASP.NET Core + EF Core</span>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
